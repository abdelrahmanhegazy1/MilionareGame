<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dell.millionairegame">
    <application
        android:allowBackup="true"
        android:icon="@mipmap/game_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/game_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen1"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SplashScreen2"
            android:screenOrientation="portrait"/>
        <activity android:name=".MainMenu"
            android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".PopUpScore"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity
            android:name=".PopUpVote"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.CustomTheme2" />
        <activity
            android:name=".PopUpAnswer"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.CustomTheme2" />
        <activity
            android:name=".QuitMessage"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.CustomTheme"></activity>
        <activity android:name=".LoseTheGame"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.CustomTheme"></activity>
    </application>

</manifest>